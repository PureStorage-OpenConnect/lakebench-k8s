{# Prometheus Service - ClusterIP for internal access #}
apiVersion: v1
kind: Service
metadata:
  name: lakebench-prometheus
  namespace: {{ namespace }}
  labels:
    app.kubernetes.io/name: lakebench
    app.kubernetes.io/component: prometheus
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 9090
      targetPort: 9090
      protocol: TCP
  selector:
    app: lakebench-prometheus
