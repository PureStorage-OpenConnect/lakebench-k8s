---
# StorageClass for Spark scratch/shuffle PVCs.
# Cluster-scoped resource -- requires cluster-admin to create.
# Provisioner and parameters are configurable via scratch config.
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: {{ scratch_storage_class }}
  labels:
    app.kubernetes.io/name: lakebench
    app.kubernetes.io/managed-by: lakebench
provisioner: {{ scratch_provisioner }}
parameters:
{% for key, value in scratch_parameters.items() %}
  {{ key }}: "{{ value }}"
{% endfor %}
reclaimPolicy: Delete
volumeBindingMode: Immediate
allowVolumeExpansion: true
