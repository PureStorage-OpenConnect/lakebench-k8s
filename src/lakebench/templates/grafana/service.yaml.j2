{# Grafana Service - ClusterIP for internal access #}
apiVersion: v1
kind: Service
metadata:
  name: lakebench-grafana
  namespace: {{ namespace }}
  labels:
    app.kubernetes.io/name: lakebench
    app.kubernetes.io/component: grafana
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 3000
      targetPort: 3000
      protocol: TCP
  selector:
    app: lakebench-grafana
