---
# Hive Metastore Deployment
# Based on Addendum B.2
apiVersion: apps/v1
kind: Deployment
metadata:
  name: lakebench-hive-metastore
  namespace: {{ namespace }}
  labels:
    app.kubernetes.io/name: lakebench
    app.kubernetes.io/instance: {{ name }}
    app.kubernetes.io/component: hive
    app.kubernetes.io/managed-by: lakebench
spec:
  replicas: 1
  selector:
    matchLabels:
      app: lakebench-hive-metastore
  template:
    metadata:
      labels:
        app: lakebench-hive-metastore
        app.kubernetes.io/name: lakebench
        app.kubernetes.io/instance: {{ name }}
        app.kubernetes.io/component: hive
    spec:
      # Init containers: wait for PostgreSQL, then initialize schema
      initContainers:
        - name: wait-for-postgres
          image: busybox:1.36
          command: ['sh', '-c', 'until nc -z lakebench-postgres 5432; do echo waiting for postgres; sleep 2; done']
        - name: init-schema
          image: {{ hive_image | default('apache/hive:3.1.3') }}
          imagePullPolicy: {{ image_pull_policy | default('IfNotPresent') }}
          # Only initialize schema if not already present (idempotent)
          command:
            - /bin/bash
            - -c
            - |
              /opt/hive/bin/schematool -dbType postgres -info || \
              /opt/hive/bin/schematool -dbType postgres -initSchema
          env:
            - name: HIVE_DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: lakebench-postgres-secret
                  key: password
          volumeMounts:
            - name: hive-config
              mountPath: /opt/hive/conf/hive-site.xml
              subPath: hive-site.xml
      containers:
        - name: metastore
          image: {{ hive_image | default('apache/hive:3.1.3') }}
          imagePullPolicy: {{ image_pull_policy | default('IfNotPresent') }}
          command: ["/opt/hive/bin/hive", "--service", "metastore"]
          ports:
            - containerPort: 9083
              name: thrift
          env:
            - name: HIVE_DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: lakebench-postgres-secret
                  key: password
          volumeMounts:
            - name: hive-config
              mountPath: /opt/hive/conf/hive-site.xml
              subPath: hive-site.xml
          resources:
            requests:
              cpu: "{{ hive_cpu_min | default('500m') }}"
              memory: "{{ hive_memory | default('4Gi') }}"
            limits:
              cpu: "{{ hive_cpu_max | default('2') }}"
              memory: "{{ hive_memory | default('4Gi') }}"
          # Readiness: thrift port accepting connections
          readinessProbe:
            tcpSocket:
              port: 9083
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
          livenessProbe:
            tcpSocket:
              port: 9083
            initialDelaySeconds: 60
            periodSeconds: 20
            timeoutSeconds: 5
      volumes:
        - name: hive-config
          configMap:
            name: lakebench-hive-config
